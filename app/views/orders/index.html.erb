<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Pick up</th>
      <th>Drop off</th>
      <th>Pick up at</th>
      <th>Drop off at</th>
      <th>Referances</th>
      <th>Referances</th>
      <th>Status</th>
      <th>Accepted at</th>
      <th>Completed at</th>
      <th>Canceled at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.pick_up %></td>
        <td><%= order.drop_off %></td>
        <td><%= order.pick_up_at %></td>
        <td><%= order.drop_off_at %></td>
        <td><%= order.driver_id %></td>
        <td><%= order.user %></td>
        <td><%= order.status %></td>
        <td><%= order.accepted_at %></td>
        <td><%= order.completed_at %></td>
        <td><%= order.canceled_at %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

